{
  "name": "kuaukutsu/ds-collection",
  "description": "Is the abstract layer which covers functionality the data structure Collection.",
  "license": "MIT",
  "type": "library",
  "authors": [
    {
      "name": "Dmitriy Krivopalov",
      "email": "dimarik82@gmail.com"
    }
  ],
  "support": {
    "issues": "https://github.com/kuaukutsu/ds-collection/issues",
    "source": "https://github.com/kuaukutsu/ds-collection"
  },
  "require": {
    "php": "^8.1.31",
    "php-ds/php-ds": "^1.3"
  },
  "require-dev": {
    "phpstan/phpstan": "^2.0",
    "phpunit/phpunit": "^10.1",
    "rector/rector": "^2.0",
    "roave/security-advisories": "dev-latest",
    "slevomat/coding-standard": "^8.7",
    "squizlabs/php_codesniffer": "^3.7",
    "vimeo/psalm": "^6.13"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://asset-packagist.org"
    }
  ],
  "autoload": {
    "psr-4": {
      "kuaukutsu\\ds\\collection\\": "src"
    },
    "files": [
      "src/internal/functions.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "kuaukutsu\\ds\\collection\\tests\\": "tests"
    }
  },
  "config": {
    "platform": {
      "php": "8.1.31"
    },
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    },
    "sort-packages": true
  },
  "scripts": {
    "check": [
      "@phpcs",
      "@psalm",
      "@phpstan",
      "@tests"
    ],
    "phpcs": "vendor/bin/phpcs",
    "psalm": "vendor/bin/psalm --show-info --no-diff --no-cache",
    "phpstan": "vendor/bin/phpstan analyze",
    "tests": "vendor/bin/phpunit"
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
